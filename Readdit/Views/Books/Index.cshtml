                        @Html.DisplayFor(modelItem => bookItem.User.Id)
                    </td>*@
                            <td>
                                @if (bookItem.UserId == @ViewBag.CurentUserId)
                                {
                                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@bookItem.BookId">Edit</a>
                                    <a class="btn btn-primary btn-sm" asp-action="Delete" asp-route-id="@bookItem.BookId">Remove</a>
                                }
                            </td>
                        </tr>
                    }
                }
                </tbody>
        </table>




