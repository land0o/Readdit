                                @Html.DisplayFor(modelItem => bookItem.IsRead)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => bookItem.IsOwned)
                            </td>
                            @*<td>
                        @Html.DisplayFor(modelItem => bookItem.IsWish)
                    </td>*@
