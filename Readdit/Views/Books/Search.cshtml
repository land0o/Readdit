@model IEnumerable<Readdit.Models.Book>

@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>
<div class="input-group mb-3">
    <form asp-controller="Books" asp-action="Search" method="get" style="margin:auto;">
        <div class="input-group-append">
            <input type="text" name="SearchString" class="form-control" placeholder="Search for a book by Book Title, Genre, Series or Author"
                   aria-label="" aria-describedby="button-addon2" size="55">
            <input class="btn btn-outline-secondary" type="submit" value="Search" id="button-addon2" />
        </div>
    </form>
</div>

<p>

</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            @*<th>
                @Html.DisplayNameFor(model => model.GoodreadsId)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <form asp-action="Create" asp-controller="Books">
            <tr>
                <td>
                    <img src="@item.imageUrl" />
                </td>
                @*<td>
                @Html.DisplayFor(modelItem => item.GoodreadsId)
            </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.BookId">Details</a>
                    @*1. need to grab the info and submit it to the database on add*@

                    @{var GoodreadsId = item.GoodreadsId;}
                    @{var UserId = @ViewBag.CurentUserId;}
                    <div class="form-group">
                        <input type="hidden" class="form-control" asp-for="@GoodreadsId" />
                        <input type="hidden" class="form-control" asp-for="@UserId" />
                    </div>
                    <div class="form-group">
                        <input class="btn btn-primary" type="submit" asp-route-id="@item.BookId" value="Add" />
                    </div>
                </td>
            </tr>
        </form>
            
        }
    </tbody>
</table>
