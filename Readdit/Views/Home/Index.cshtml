@model IEnumerable<Readdit.Models.Forum>


@{
    ViewData["Title"] = "Home Page";
}

<style type="text/css">
        body {
            background-image: url('/Images/books-filed-neatly-on-shelves.jpg');
            margin: 0;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-position: center;
            background-size: cover;
        }
    </style>
<div class="text-center jumbotron" style=" border-radius: 5%; margin-bottom: 65px;">
    <h1 
    class="display-2 text-primary"
    @*style="color: white;
    background:#868e96;
    border: 2px solid black;
    border-radius: 2%;
    width:45%;
    height:45%;
    margin:auto;
    font-family: 'Arial, Helvetica, sans-serif';
    font-size: 500%;"*@
        >
        Welcome
    </h1>
    <img src="~/Images/ReadditLogoNoBgBlue.png" alt="Site Logo" style="height:500px; width: 500px" /> <br />
    <div class="input-group mb-3">
        <form asp-controller="Home" asp-action="Search" method="get" style="margin:auto;">
            <div class="input-group-append">
                <input type="text" name="SearchString" class="form-control" placeholder="Search for a forum by Book Title, Genre, Series or Author"
                       aria-label="" aria-describedby="button-addon2" size="55">
                <input style="z-index:0;" class="btn btn-outline-primary" type="submit" value="Search" id="button-addon2" />
            </div>
        </form>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateCreated)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a href=@Url.Action("Details", "Forums", new { Id = item.ForumId })>@item.Title</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
