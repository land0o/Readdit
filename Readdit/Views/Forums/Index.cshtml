@model IEnumerable<Readdit.Models.Forum>


@{
    ViewData["Title"] = "Index";
}

<h1>Forums</h1>

<p>
    <a asp-action="Create">Create A New Forum</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-controller="ApplicationUsers" asp-action="Details" asp-route-id="@item.User.Id">
                        @Html.DisplayFor(modelItem => item.User.FullName)
                    </a>
                </td>
                <td>
                    @if (item.UserId == @ViewBag.CurentUserId)
                    {
                    <div>
                        <a asp-action="Edit" asp-route-id="@item.ForumId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ForumId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ForumId">Delete</a>
                    </div>
                    }
                    else
                    {
                       <div>
                        @*<a asp-action="Details" asp-route-id="@item.ForumId">Details</a>*@
                       </div>         
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

