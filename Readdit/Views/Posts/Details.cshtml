@model Readdit.Models.Post

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Message)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Message)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Forum)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Forum.Description)
        </dd>
    </dl>
</div>
<div>
    @if (Model.UserId == @ViewBag.CurentUserId)
    {
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.PostId">Edit</a>
        <a class="btn btn-primary" href="javascript:history.go(-1)">Back to Previous Posts</a>
    }
    else
    {
        <a class="btn btn-primary" href="javascript:history.go(-1)">Back to Previous Posts</a>
    }
</div>
